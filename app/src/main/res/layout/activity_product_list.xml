<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/yellowMinistop"
    tools:context=".ProductListActivity">

    <TextView
        android:id="@+id/tvManage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="✎ Quản lý sản phẩm"
        android:textSize="22dp"
        android:paddingLeft="20dp"
        android:textColor="@color/whiteTextColor"
        android:background="@color/blueMint"
        android:layout_alignParentTop="true"/>

    <Button
        android:id="@+id/btnCreateProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tvManage"
        android:backgroundTint="@color/blueMinistop"
        android:layout_margin="10dp"
        android:text="TẠO SẢN PHẨM" />

    <TextView
        android:id="@+id/tvLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvManage"
        android:layout_alignEnd="@id/tvManage"
        android:paddingTop="10dp"
        android:layout_margin="10dp"
        android:text="Đăng xuất"
        android:layout_marginTop="10dp"
        android:textSize="20dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvBillDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="@color/whiteTextColor"
        android:layout_below="@id/btnCreateProduct"
        app:cardCornerRadius="10dp">
        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:divider="@drawable/margin_divider"
            android:layout_below="@+id/btnCreateProduct"/>
    </androidx.cardview.widget.CardView>
</RelativeLayout>